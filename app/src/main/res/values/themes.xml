<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WazirxTicker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <style name="Theme.WazirxTicker" parent="Base.Theme.WazirxTicker">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="colorSurface">@color/white</item>

        <item name="dividerColor">@color/gray_light</item>
        <item name="coinBackground">@color/pink_light</item>
        <item name="listHeaderColor">@color/gray_light</item>
    </style>

    <style name="CONSTRAINT_MATCH_PARENT">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="CONSTRAINT_CENTER_HORIZONTAL">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="CONSTRAINT_CENTER_VERTICAL">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="CONSTRAINT_CENTER_HORIZONTAL_TOP">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <style name="CONSTRAINT_START_TOP">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CONSTRAINT_CENTER_END">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="CONSTRAINT_CENTER_START">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CONSTRAINT_CENTER_HORIZONTAL_BOTTOM">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="DIVIDER">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?dividerColor</item>
    </style>

    <style name="TOGGLE_THEME" parent="CONSTRAINT_CENTER_END">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="tint">@color/md_pink_500</item>
    </style>

    <style name="SETTINGS_ICON" parent="CONSTRAINT_CENTER_END">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="tint">?attr/colorAccent</item>
    </style>

    <style name="COFFEE_ICON" parent="CONSTRAINT_CENTER_START">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="tint">?attr/colorAccent</item>
    </style>

    <style name="TOOLBAR_TITLE" parent="CONSTRAINT_CENTER_HORIZONTAL_TOP">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SETTINGS_HEADER">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">.6</item>
    </style>

    <style name="SETTINGS_ITEM" parent="SETTINGS_HEADER">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:alpha">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="drawableTint">@color/md_pink_500</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SETTINGS_ITEM_SUBTITLE">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:alpha">.7</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSecondary</item>
    </style>

    <style name="SETTINGS_VERSION" parent="SETTINGS_HEADER">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>